<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanyan.card.dao.mapper.CommodityInfoMapper">

    <select id="getCommodityInfoById" resultType="CommodityInfo">
        select
                commodityId as commodityId,         <!--商品id-->
                className as className,         <!--类名-->
                classId as classId,         <!--类别id-->
                commodityName as commodityName,         <!--商品名称-->
                merchantId as merchantId,         <!--商家id-->
                price as price,         <!--商品价格-->
                num as num,         <!--商品数量-->
                remark as remark,         <!--商品说明-->
                pic as pic,         <!--图片-->
                createTm as createTm,         <!--创建时间-->
                operTm as operTm,         <!--操作时间-->
                selled as selled          <!--已售数量-->
        from commodity_info
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getCommodityInfoListByMap" resultType="CommodityInfo"
            parameterType="java.util.Map">
            select
                commodityId as commodityId,      <!--商品id-->
                className as className,      <!--类名-->
                classId as classId,      <!--类别id-->
                commodityName as commodityName,      <!--商品名称-->
                merchantId as merchantId,      <!--商家id-->
                price as price,      <!--商品价格-->
                num as num,      <!--商品数量-->
                remark as remark,      <!--商品说明-->
                pic as pic,      <!--图片-->
                createTm as createTm,      <!--创建时间-->
                operTm as operTm,      <!--操作时间-->
                selled as selled       <!--已售数量-->
            from commodity_info
        <trim prefix="where" prefixOverrides="and | or">
                <if test="commodityId != null and (commodityId!='' or commodityId==0)">
                    and commodityId=#{commodityId}
                </if>
                <if test="className != null and className!=''">
                    and className=#{className}
                </if>
                <if test="classId != null and (classId!='' or classId==0)">
                    and classId=#{classId}
                </if>
                <if test="commodityName != null and commodityName!=''">
                    and commodityName=#{commodityName}
                </if>
                <if test="merchantId != null and merchantId!=''">
                    and merchantId=#{merchantId}
                </if>
                <if test="price != null and price!=''">
                    and price=#{price}
                </if>
                <if test="num != null and (num!='' or num==0)">
                    and num=#{num}
                </if>
                <if test="remark != null and remark!=''">
                    and remark=#{remark}
                </if>
                <if test="pic != null and pic!=''">
                    and pic=#{pic}
                </if>
                <if test="createTm != null and createTm!=''">
                    and createTm=#{createTm}
                </if>
                <if test="operTm != null and operTm!=''">
                    and operTm=#{operTm}
                </if>
                <if test="selled != null and (selled!='' or selled==0)">
                    and selled=#{selled}
                </if>
        </trim>
        order by creationDate desc
        <if test="beginPos != null and beginPos!='' and pageSize != null  and pageSize !='' ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getCommodityInfoCountByMap" resultType="Integer" parameterType="java.util.Map">
        select count(*) from commodity_info
        <trim prefix="where" prefixOverrides="and | or">
                    <if test="commodityId != null and (commodityId!='' or commodityId==0)">
                        and commodityId=#{commodityId}
                    </if>
                    <if test="className != null and className!=''">
                        and className=#{className}
                    </if>
                    <if test="classId != null and (classId!='' or classId==0)">
                        and classId=#{classId}
                    </if>
                    <if test="commodityName != null and commodityName!=''">
                        and commodityName=#{commodityName}
                    </if>
                    <if test="merchantId != null and merchantId!=''">
                        and merchantId=#{merchantId}
                    </if>
                    <if test="price != null and price!=''">
                        and price=#{price}
                    </if>
                    <if test="num != null and (num!='' or num==0)">
                        and num=#{num}
                    </if>
                    <if test="remark != null and remark!=''">
                        and remark=#{remark}
                    </if>
                    <if test="pic != null and pic!=''">
                        and pic=#{pic}
                    </if>
                    <if test="createTm != null and createTm!=''">
                        and createTm=#{createTm}
                    </if>
                    <if test="operTm != null and operTm!=''">
                        and operTm=#{operTm}
                    </if>
                    <if test="selled != null and (selled!='' or selled==0)">
                        and selled=#{selled}
                    </if>
        </trim>
    </select>

    <insert id="saveCommodityInfo" parameterType="CommodityInfo">
        insert into commodity_info(
            commodityId ,      <!--商品id-->
            className ,      <!--类名-->
            classId ,      <!--类别id-->
            commodityName ,      <!--商品名称-->
            merchantId ,      <!--商家id-->
            price ,      <!--商品价格-->
            num ,      <!--商品数量-->
            remark ,      <!--商品说明-->
            pic ,      <!--图片-->
            createTm ,      <!--创建时间-->
            operTm ,      <!--操作时间-->
            selled       <!--已售数量-->
        )
        values(
                    #{commodityId} ,      <!--商品id-->
                    #{className} ,      <!--类名-->
                    #{classId} ,      <!--类别id-->
                    #{commodityName} ,      <!--商品名称-->
                    #{merchantId} ,      <!--商家id-->
                    #{price} ,      <!--商品价格-->
                    #{num} ,      <!--商品数量-->
                    #{remark} ,      <!--商品说明-->
                    #{pic} ,      <!--图片-->
                    #{createTm} ,      <!--创建时间-->
                    #{operTm} ,      <!--操作时间-->
                    #{selled}       <!--已售数量-->
        )
    </insert>

    <update id="modifyCommodityInfo" parameterType="CommodityInfo">
        update commodity_info
        <trim prefix="set" suffixOverrides="," suffix="where id= #{id}">
                <if test="commodityId != null and (commodityId!='' or commodityId==0)">
                     commodityId=#{commodityId},
                </if>
                <if test="className != null and className!=''">
                     className=#{className},
                </if>
                <if test="classId != null and (classId!='' or classId==0)">
                     classId=#{classId},
                </if>
                <if test="commodityName != null and commodityName!=''">
                     commodityName=#{commodityName},
                </if>
                <if test="merchantId != null and merchantId!=''">
                     merchantId=#{merchantId},
                </if>
                <if test="price != null and price!=''">
                     price=#{price},
                </if>
                <if test="num != null and (num!='' or num==0)">
                     num=#{num},
                </if>
                <if test="remark != null and remark!=''">
                     remark=#{remark},
                </if>
                <if test="pic != null and pic!=''">
                     pic=#{pic},
                </if>
                <if test="createTm != null and createTm!=''">
                     createTm=#{createTm},
                </if>
                <if test="operTm != null and operTm!=''">
                     operTm=#{operTm},
                </if>
                <if test="selled != null and (selled!='' or selled==0)">
                     selled=#{selled},
                </if>
        </trim>
    </update>

    <delete id="removeCommodityInfoById" parameterType="Long">
        delete from commodity_info where id = #{id}
    </delete>
</mapper>